<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.locationserviceex"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
     <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="MyLocation"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="ShowLocations" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <service android:name=".GPS_Service"/>
       <provider android:name="Location_Provider"
                android:authorities="net.learn2develop.provider.Locations"
                android:enabled="true"
                android:exported="true"
                android:grantUriPermissions="true" />
    </application>

</manifest>
